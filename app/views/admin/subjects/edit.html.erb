<% provide(:title, 'Edit subject') %>
<h1>Edit subject</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for [:admin, @subject] do |f| %>
      <div class="subject">
        <%= f.label "Subject name" %>
        <%= f.text_field :subject_name, rows: 3 %>
      </div>
      <p><%= f.submit "Edit subject" %></p>
    <% end %>
  </div>
</div>
