<div class="question">
  <p>Category</p>
  <p><%= @question.subject.subject_name %></p>
</div>
<div class="question">
  <p>Question</p>
  <%= @question.subject_content %>
</div>
<div class="answer">
  <% @question.answers.each do |answer| %>
    <%= render 'answer', answer: answer %>
  <% end %>
</div>
<%= link_to "Edit question", edit_admin_question_path(@question),
		   class: "btn btn-small btn-primary" %>

<%= link_to "Delete question", admin_question_path(@question),
		   method: :delete, class: "btn btn-small btn-primary" %>
