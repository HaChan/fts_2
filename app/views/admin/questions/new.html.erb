<% provide(:title, 'Create a new question') %>
<h1>Create a new question</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag new_admin_question_path, method: "get", remote: true do %>
        <%= label_tag "Number of answers" %>
        <%= number_field_tag 'answer_num', nil,  in: 1..5 %>

        <%= label_tag "Type of question" %>

        <% @type_questions.each do |type| %>
          <%= radio_button_tag :type_question, type.id, checked: type.checked?(@question.type_question_id) %>
          <%= type.question_type %>
        <% end %>

        <%= submit_tag "Change", class: "btn btn-small btn-primary" %>
      <% end %>
    <div id="question_form">
      <%=render "question_form"%>
    </div>
  </div>
</div>
